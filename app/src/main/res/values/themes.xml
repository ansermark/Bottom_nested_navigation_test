<resources>
    <!-- Base application theme. -->
    <style name="Theme.BottomNestedNavigationTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.BottomNestedNavigationTest.MediumComponent
        </item>
    </style>

    <style name="Theme.BottomNestedNavigationTest.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.BottomNestedNavigationTest.Dialog
        </item>
    </style>
</resources>